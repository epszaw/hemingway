{
  "name": "hemingway",
  "version": "0.0.0",
  "repository": "git@github.com:lamartire/hemingway.git",
  "author": "lamartire <lamartire@gmail.com>",
  "license": "GPL-3.0",
  "main": "./src/index.js",
  "bin": {
    "hemingway": "./bin/cli.js"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "globals": {
      "NODE_ENV": true
    },
    "extends": [
      "prettier-standard",
      "prettier"
    ],
    "plugins": [
      "import",
      "node",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ],
      "no-unused-vars": 1
    },
    "parserOptions": {
      "ecmaVersion": 8
    }
  },
  "eslintIgnore": [
    "/node_modules",
    "/build"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleNameMapper": {
      "^__fixtures__/(.*)$": "<rootDir>/src/__test__/__fixtures__/$1",
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "test": "jest"
  },
  "dependencies": {
    "chai": "^4.1.2",
    "chalk": "2",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "ora": "^3.0.0",
    "puppeteer": "^1.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-prettier-standard": "^2.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.0.1",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "mock-fs": "^4.7.0",
    "prettier": "^1.14.3"
  }
}
